<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.peryite.DemonHerding.MainActivity"
    android:background="@drawable/bg2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:forceHasOverlappingRendering="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:background="@drawable/title"/>
    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Pit_Lord"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:gravity="center"
            android:layout_weight=".33"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/HP"
            android:id="@+id/textView3"
            android:layout_column="1"
            android:layout_weight=".33"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Amount"
            android:id="@+id/textView4"
            android:layout_column="2"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_weight=".33"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_pitlord"
            android:background="@drawable/pfa3"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/PitAmount"
            android:layout_weight=".336"
            android:textColor="#ffffff"
            android:background="@drawable/field"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/HPAmount"
            android:layout_weight=".336"
            android:textColor="#ffffff"
            android:background="@drawable/field"
            android:gravity="center_horizontal"
            android:layout_width="0dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Amount"
            android:layout_weight=".33"
            android:textColor="#ffffff"
            android:background="@drawable/field"
            android:gravity="center_horizontal"
            android:layout_width="0dp" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compute"
            android:onClick="clickCompute"
            android:background="@drawable/button1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Clear"
            android:background="@drawable/button2"
            android:onClick="clickClear"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/DaemonAmount"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:background="@drawable/fieldtext"
            android:layout_below="@+id/text_Daemon"
            android:layout_alignStart="@+id/text_Daemon"
            android:layout_alignEnd="@+id/text_Daemon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Daemon"
            android:id="@+id/text_Daemon"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Needs"
            android:id="@+id/text_Needs"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageView"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Spare"
            android:id="@+id/text_Spare"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignBottom="@+id/text_Needs"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignTop="@+id/text_Needs"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/SpareAmount"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/fieldtext"
            android:layout_below="@+id/text_Spare"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignBottom="@+id/NeedsAmount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/NeedsAmount"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/fieldtext"
            android:layout_below="@+id/text_Needs"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/daemon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</TableLayout>
